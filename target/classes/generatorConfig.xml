<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!--配置文件路径-->

    <!--数据库驱动包路径-->
    <classPathEntry location="/Users/jpliu/Downloads/mysql-connector-java/mysql-connector-java-5.1.47.jar"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <!--关闭注释-->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--数据库连接信息-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/questionAnswer?characterEncoding=utf8"
                        userId="root" password="root"/>
        
        <!--指定生成类型为Java类型，避免数据库中number等类型字段-->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--生成模型的包名和位置-->
        <javaModelGenerator targetPackage="com.jpliu.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--生成的映射文件包名和位置-->
        <sqlMapGenerator targetPackage="sqlmap" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--生成dao的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.jpliu.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <table tableName="user"
               domainObjectName="user"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true"/>

        <table tableName="question"
               domainObjectName="question"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true"/>

        <table tableName="message"
               domainObjectName="message"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true"/>

        <table tableName="login_ticket"
               domainObjectName="loginTicket"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true"/>

        <table tableName="feed"
               domainObjectName="feed"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true"/>

        <table tableName="comment"
               domainObjectName="comment"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true"/>
    </context>
</generatorConfiguration>